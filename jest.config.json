{
	"preset": "ts-jest",
	"verbose": true,
	"clearMocks": true,
	"testEnvironment": "node",
	"moduleFileExtensions": ["js", "ts"],
	"testMatch": ["**/*.test.ts"],
	"testPathIgnorePatterns": ["/node_modules/", "/dist/"],
	"transform": {
		"^.+\\.ts$": "ts-jest"
	},
	"coverageReporters": ["text"],
	"collectCoverage": true,
	"collectCoverageFrom": ["./src/**"]
}
